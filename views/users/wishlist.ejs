<%- include('../layouts/header.ejs') %>
    <!-- Navbar End -->


    <!-- Breadcrumb Start -->
    <div class="container-fluid">
        <div class="row px-xl-5">
            <div class="col-12">
                <nav class="breadcrumb bg-light mb-30">
                    <a class="breadcrumb-item text-dark" href="#">Home</a>
                    <a class="breadcrumb-item text-dark" href="#">Shop</a>
                    <span class="breadcrumb-item active">Wishlist</span>
                </nav>
            </div>
        </div>
    </div>
    <!-- Breadcrumb End -->


    <!-- Cart Start -->
    <div class="container-fluid">
        <% if(user_in){ %>
       
        <div class="row px-xl-5 justify-content-center">
          
            <div class="col-lg-8 table-responsive mb-5">
                <table class="table table-light table-borderless table-hover text-center mb-0">
                    <thead class="thead-dark">
                        <tr>
                            <th>Products</th>
                            <th>Price</th>
                            <th>Action</th>
                            <th>Remove</th>
                        </tr>
                    </thead>
                    <tbody class="align-middle">
                        <% if(wishlistproducts.length>0){
                            for(let i=0;i<wishlistproducts.length;i++) { %>
                        <tr>
                            <td class="align-middle"><img src="/productImages/<%= wishlistproducts[i].image[0] %>" alt="" style="width: 50px;"><%= wishlistproducts[i].name %></td>
                            <td class="align-middle"><%= wishlistproducts[i].price %></td>
                            <td class="align-middle">
                                <a href="/add-cart/?id=<%= wishlistproducts[i]._id %>"><button class="btn btn-sm btn-danger">Add to cart</button></a>
                                
                            </td>
                            
                            <td class="align-middle"><a href="/delete_wishlist_item/?id=<%= wishlistproducts[i]._id %>"><button class="btn btn-sm btn-danger"><i class="fa fa-times"></i></button></a></td>
                        </tr>

                        <% } %>
                        <%}else { %>
                           <tr>
                              <td colspan="5">No items in your wishlist</td>
                           </tr>
                        <% } %>
                        
                    </tbody>
                </table>
            </div>
           
        </div>
        <% } 
        else{ %>
            <a href="/login"> <button class="btn btn-block btn-primary font-weight-bold my-3 py-3">Please  Sign In to continue</button></a>
            <div class="row px-xl-5 justify-content-center"></div>
    
          <% } %>
    </div>
         
    <!-- Cart End -->


    <!-- Footer Start -->

    <%- include('../layouts/footer.ejs') %>
   