<%- include('../layouts/header.ejs') %>
    <!-- Navbar End -->


   


    <!-- Cart Start -->
    <div class="container-fluid">

        <div class="container rounded bg-white mt-5 mb-5">
            <div class="row">
                <div class="col-md-6 border-right">
                    <div class="d-flex flex-column align-items-center text-center p-3 py-5"><img class="rounded-circle mt-5" width="150px" src="https://st3.depositphotos.com/15648834/17930/v/600/depositphotos_179308454-stock-illustration-unknown-person-silhouette-glasses-profile.jpg"><span class="font-weight-bold"><%= addressData.name %></span><span class="text-black-50"></span><span> </span></div>
                </div>
                <div class="col-md-6 border-right">
                    <div class="p-3 py-5">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h4 class="text-right">EDIT ADDRESS</h4>
                        </div>
                        <div class="row mt-2">
                          
                        </div>
                        <form action="/editprofile1/?id=<%=addressData._id%>" method="POST">
                        <div class="row mt-3">
                         
                            <div class="col-md-12"><label class="labels"></label><input type="text" name="name" class="form-control" required placeholder="Name" value="<%=addressData.name%>"></div>
                            <div class="col-md-12"><label class="labels"></label><input type="text" name="address1" class="form-control" required placeholder="Address" value="<%=addressData.address1%>"></div>
                          
                            <div class="col-md-12"><label class="labels"></label><input type="text" name="street" class="form-control" required placeholder="Street" value="<%=addressData.street%>"></div>
                            <div class="col-md-12"><label class="labels"></label><input type="text" name="city" class="form-control" required placeholder="City" value="<%=addressData.city%>"></div>
                            <div class="col-md-12"><label class="labels"></label><input type="text" name="state" class="form-control" required placeholder="State" value="<%=addressData.state%>"></div>
                            <div class="col-md-12"><label class="labels"></label><input type="text" name="country" class="form-control" required placeholder="Country" value="<%=addressData.country%>"></div>
                            <div class="col-md-12"><label class="labels"></label><input type="text" name="mobile" class="form-control" required placeholder="Phone Number" value="<%=addressData.mobile%>"></div>
                            <div class="col-md-12"><label class="labels"></label><input type="number" name="pin" class="form-control" required placeholder="Pin" value="<%=addressData.postalCode%>"></div>
                        </div>
                       
                        <div class="mt-5 text-center"><button class="btn btn-primary profile-button" type="submit">Update Address</button></div>
                    </form>
                    </div>
                </div>
                
            </div>
        </div>
        </div>
        </div>
        
      
    </div>

    <%- include('../layouts/footer.ejs') %>