    <!-- Cart Start -->
    <div class="container-fluid">

        <div class="container rounded bg-white mt-5 mb-5">
            <div class="row">
                <div class="col-md-6 border-right">
                    <div class="d-flex flex-column align-items-center text-center p-3 py-5"><img class="rounded-circle mt-5" width="150px" src="https://st3.depositphotos.com/15648834/17930/v/600/depositphotos_179308454-stock-illustration-unknown-person-silhouette-glasses-profile.jpg"><span class="font-weight-bold"><%= user_in.name %></span><span class="text-black-50"><%= user_in.email %></span><span> </span></div>
                </div>
                <div class="col-md-6 border-right">
                    <div class="p-3 py-5">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h4 class="text-right">Profile Settings</h4>
                        </div>
                        <div class="row mt-2">
                          
                        </div>
                        <form action="/add_address" method="POST">
                        <div class="row mt-3">
                            <div class="col-md-12"><label class="labels"></label><input type="text" name="name" class="form-control" required placeholder="Name" value=""></div>
                            <div class="col-md-12"><label class="labels"></label><input type="text" name="address1" class="form-control" required placeholder="Address" value=""></div>
                          
                            <div class="col-md-12"><label class="labels"></label><input type="text" name="street" class="form-control" required placeholder="Street" value=""></div>
                            <div class="col-md-12"><label class="labels"></label><input type="text" name="city" class="form-control" required placeholder="City" value=""></div>
                            <div class="col-md-12"><label class="labels"></label><input type="text" name="state" class="form-control" required placeholder="State" value=""></div>
                            <div class="col-md-12"><label class="labels"></label><input type="text" name="country" class="form-control" required placeholder="Country" value=""></div>
                            <div class="col-md-12"><label class="labels"></label><input type="text" name="mobile" class="form-control" required placeholder="Phone Number" value=""></div>
                            <div class="col-md-12"><label class="labels"></label><input type="number" name="pin" class="form-control" required placeholder="Pin" value=""></div>
                        </div>
                       
                        <div class="mt-5 text-center"><button class="btn btn-primary profile-button" type="submit">Save Address</button></div>
                    </form>
                    </div>
                </div>
                
            </div>
        </div>
        </div>
        </div>
        
      
    </div>

