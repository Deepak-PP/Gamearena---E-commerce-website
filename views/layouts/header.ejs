<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Gamearena</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="Game accessories store" name="keywords">
    <meta content="Game accessories store" name="description">
    <link rel="shortcut icon" type="x-icon" href="/gamearena logo.png">

    <!-- Favicon -->
  

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.gstatic.com">

    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11.1.2/dist/sweetalert2.min.css">

    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">  
    <script src="sweetalert2.min.js"></script>
    <link rel="stylesheet" href="sweetalert2.min.css">

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/magiczoom.css">

    <!-- Libraries Stylesheet -->
    <link href="lib/animate/animate.min.css" rel="stylesheet">
    <link href="lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="/style.css" rel="stylesheet">
</head>

<body style="background-image: url(/backgrnd1.jpg); background-size: contain;  background-position: center center; height: max-content;" >
    <!-- Topbar Start -->
    <div class="container-fluid">
     
        <div class="row bg-dark text-light py-1 px-xl-5" style="display: flex;justify-content: flex-end;">
          
            <div class="col-lg-6 text-center text-lg-right">
                <div class="d-inline-flex justify-content-between align-items-center">
                    <div class="col-lg-6 d-block d-lg-none px-3 mr-3">
                        <a href="" class="text-decoration-none d-block d-lg-none">
                            <span class="h2 text-uppercase text-danger bg-dark mr-2">GAME</span><span
                                class="h2 text-uppercase text-dark bg-danger ml-n1">ARENA</span>
                        </a>
                    </div>

                    <div class="btn-group pl-5 ml-3 mt-2">
                        <% if(user_in){ %>
                            <button data-toggle="dropdown" class="buttonS ">
                                <span class="buttonS_lg my-1 px-1 py-1">
                                    <span class="buttonS_sl"></span>
                                    <span class="buttonS_text"> Account</span>
                                </span>
                            </button>
                            <div class="dropdown-menu dropdown-menu-right">
                                <a href="/logout"><button  class="dropdown-item" type="button">Logout</button></a>
                                
                            </div>

                      <% }
                        else{ %>
                        <button data-toggle="dropdown" class="buttonS">
                            <span class="buttonS_lg">
                                <span class="buttonS_sl"></span>
                                <span class="buttonS_text"> Account</span>
                            </span>
                        </button>
                            <div class="dropdown-menu dropdown-menu-right">
                                <a href="/login">
                                <button  class="dropdown-item" type="button">Sign in</button></a>
                                <a href="/register"><button  class="dropdown-item" type="button">Sign up</button></a>
                                
                            </div>
                       <% } %>
                       
                    </div>
                    
                </div>
               
            </div>
        </div>
        <div class="row align-items-center  py-3 px-xl-5 d-none d-lg-flex">
            <div class="col-lg-4">
                <a href="" class="text-decoration-none">
                    <span class="h1 text-uppercase text-danger bg-dark px-2">Game</span>
                    <span class="h1 text-uppercase text-dark bg-danger px-2 ml-n1">Arena</span>
                </a>
            </div>
            <div class="col-lg-4 col-6 text-left">
                <form action="">
                    <div class="input-group">
                        <input type="text" id="search_input" onkeyup="searchProduct()" class="form-control" placeholder="Search for products">
                        <div class="input-group-append">
                            <span class="input-group-text bg-transparent text-primary">
                                <i class="fa fa-search text-danger"></i>
                            </span>
                        </div>
                    </div>
                </form>
            </div>
            
        </div>
    </div>
    <!-- Topbar End -->


    <!-- Navbar Start -->
    <div class="container-fluid  mb-30" style="background-color: rgba(0, 0, 0, 0.655);">
        <div class="row px-xl-5">
            <div class="col-lg-3 d-none d-lg-block">
                <a class="btnCat d-flex align-items-center justify-content-between  w-100" data-toggle="collapse" href="#navbar-vertical" style="height: 65px; padding: 0 30px;">
                   <h6 class="text-secondary m-0"><i class="fa fa-bars mr-2"></i>Shop by Category</h6>
                    <i class="fa fa-angle-down text-dark"></i>
                </a>
                <nav class="collapse position-absolute navbar navbar-vertical navbar-light align-items-start p-0 bg-light" id="navbar-vertical" style="width: calc(100% - 30px); z-index: 999;">
                    <div class="navbar-nav w-100">
                       
                        <% for(let i=0;i<categories.length;i++){ %>

                            <a href="/category_shop?id=<%= categories[i]._id %>" class="nav-item nav-link "><%= categories[i].name %></a>

                       <% } %>
                    
                       
                    </div>
                </nav>
            </div>
            <div class="col-lg-9">
                <nav class="navbar navbar-expand-lg bg-dark navbar-dark py-3 py-lg-0 px-0">
                   
                    <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="d-inline-flex align-items-center d-block d-lg-none">
                        <% if(user_in){ %>
                            <a href="/userview" class="btn px-2">
                                <i class="far fa-user text-danger px-3"></i>
                    
                    
                            </a>
                            <% } else{ %>
                                <a href="/userview" class="btn px-0">
                                    <i class="far fa-user px-3 d-none"></i></a>
                                <% } %>
                                    <a href="/wishlist" class="btn px-0">
                                        <i class="fas fa-heart text-danger"></i>
                    
                                        <span class="badge text-secondary border border-secondary rounded-circle bg-danger"
                                            style="padding-bottom: 2px;">
                                            <%=wishlistcount%>
                                        </span>
                                    </a>
                                    <a href="/cart" class="btn px-0 ml-3">
                                        <i class="fas fa-shopping-cart text-danger"></i>
                                        <span class="badge text-secondary border border-secondary rounded-circle bg-danger"
                                            style="padding-bottom: 2px;">
                                            <%=cartcount%>
                                        </span>
                                    </a>
                    </div>
                    <div class="collapse navbar-collapse justify-content-between" id="navbarCollapse">
                        <div class="navbar-nav mr-auto py-0">
                            <a href="/" class="nav-item nav-link">Home</a>
                            
                           
                           
                            <a href="/contact" class="nav-item nav-link">Contact</a>
                            <a href="/shop" class="nav-item nav-link">Shop</a>
                        </div>
                        <div class="navbar-nav ml-auto py-0 d-none d-lg-block">
                            <% if(user_in){ %>
                            <a href="/userview" class="btn px-2">
                               <i class="far fa-user text-danger px-3"></i>
                                
                                
                            </a>
                            <% }
                        else{ %>
                            <a href="/userview" class="btn px-0">
                                <i class="far fa-user px-3 d-none"></i></a>
                                <% } %>

                            <a href="/wishlist" class="btn px-0">
                                <i class="fas fa-heart text-danger"></i>
                                
                                <span class="badge text-secondary border border-secondary rounded-circle bg-danger" style="padding-bottom: 2px;"><%=wishlistcount%></span>
                            </a>
                            <a href="/cart" class="btn px-0 ml-3">
                                <i class="fas fa-shopping-cart text-danger"></i>
                                <span class="badge text-secondary border border-secondary rounded-circle bg-danger" style="padding-bottom: 2px;"><%=cartcount%></span>
                            </a>
                        </div>
                    </div>
                </nav>
            </div>
        </div>
    </div>