<div class="container tm-mt-big tm-mb-big">
  <div class="row">
    <div class="col-xl-9 col-lg-10 col-md-12 col-sm-12 mx-auto">
      <div class="tm-bg-primary-dark tm-block tm-block-h-auto">
        <div class="row">
          <div class="col-12">
            <h2 class="tm-block-title d-inline-block">EDIT PRODUCT</h2>
          </div>
        </div>
        <% if(typeof message !=='undefined' ){ %>
          <p style="color: rgb(173, 0, 0);">
            <%= message %>
          </p>
          <% } %>
            <form action="/admin/edit-product" method="POST" enctype="multipart/form-data" class="tm-edit-product-form">
              <input type="hidden" name="id" value="<%= products._id  %>" />
              <div class="row tm-edit-product-row">
                <div class="col-xl-6 col-lg-6 col-md-12">

                  <div class="form-group mb-3">
                    <label for="name">Product Name
                    </label>
                    <input id="name" name="name" value="<%= products.name %>" type="text" class="form-control validate"
                      required />
                  </div>
                  <div class="form-group mb-3">
                    <label for="name">Price
                    </label>
                    <input id="name" name="price" value="<%= products.price %>" type="text"
                      class="form-control validate" required />
                  </div>
                  <div class="form-group mb-3">
                    <label for="description">Description</label>
                    <textarea class="form-control validate" rows="3"  name="description"
                      value="<%= products.description %>"></textarea>
                  </div>
                  <div class="form-group mb-3">
                    <label for="category">Category</label>
                    <select class="custom-select tm-select-accounts" id="category" name="category"
                      value="<%= products.category %>">
                   
                      <% for(category of categories){ %>

                        <option value="<%= category._id %>">
                          <%= category.name %>
                        </option>

                        <% } %>


                    </select>
                  </div>
                  <div class="row">
                    <div class="form-group mb-3">
                      <label for="name">HDD
                      </label>
                      <input id="name" name="hdd"  value="<%= products.hdd %>" type="text" class="form-control validate"
                        required />
                    </div>
                    <div class="form-group mb-3">
                      <label for="name">PROCESSOR
                      </label>
                      <input id="name" name="processor"   value="<%= products.processor %>" type="text"
                        class="form-control validate" required />
                    </div>
                    <div class="form-group mb-3 col-xs-12 col-sm-6">
                      <label for="stock">Units In Stock
                      </label>
                      <input id="stock" name="in_stock"  value="<%= products.in_stock %>" type="text"
                        class="form-control validate" required />
                    </div>
                  </div>

                </div>
                <div class="col-xl-6 col-lg-6 col-md-12 mx-auto mb-4">
                  <div class="tm-product-img-dummy mx-auto">
                    <% for(let i=0;i<products.image.length;i++){ %>
                      <div class="image-container">
                        <img style="height: 7rem;width: 7rem;" id="first" src="/productImages/<%= products.image[i] %>">
                        <a onclick="deleteImage('<%= products.image[i] %>')" class="btn-close">X</a>
                      </div>
                      <% } %>
                  </div>
                  <div class="custom-file mt-3 mb-3">
                    <input type="file" name="image"  accept=".JPEG,.JPG,.PNG,.WEBP">
                  </div>
                </div>

                <div class="col-12">
                  <button type="submit" class="btn btn-primary btn-block text-uppercase">EDIT PRODUCT NOW</button>
                </div>
            </form>
