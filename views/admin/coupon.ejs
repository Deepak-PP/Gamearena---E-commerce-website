      <thead>
        <tr>
            <th scope="col">SL.No</th>
          <th scope="col">Coupon code</th>
          <th scope="col">Discount</th>
          <th scope="col">Maximum Redeem Amount</th>
          <th scope="col">Minimum price</th>
          <th scope="col">Status</th>
          
