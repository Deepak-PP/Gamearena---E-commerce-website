          <th scope="col">&nbsp;</th>
        </tr>
      </thead>
      <tbody>
        <% if(coupons.length>0) {
            for(let i=0;i <coupons.length; i++){ %>
        <tr>
        
          <td> <%= [i] %></td>
          <td class="tm-product-name"> <%= coupons[i].couponcode %></td>
          <td id="em1"><%= coupons[i].discount %></td>
          <td>  <%= coupons[i].maxlimit %></td>
          <td>  <%= coupons[i].minpurchase %></td>
        <% if( coupons[i].isActive==1){ %>
          <td> ACTIVE</td>

          <% }else{ %>
            <td> INACTIVE</td>

            <% } %>
          
          
          <td>
           
            <a href="/admin/deletecoupon/?id=<%= coupons[i]._id %>">

                <button  type="submit" class="btn btn-info px-3  py-2">DELETE</button>
            </a>    
         
           
          </td>
         
        </tr>

        <% } %>

        <%}else { %>
          <tr>
            <td colspan="5">user not found</td>

          </tr>
          <% } %>
       
      </tbody>
    </table>
