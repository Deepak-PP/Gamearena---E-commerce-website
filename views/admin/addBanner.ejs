<script>
    $(function () {
        $("#expire_date").datepicker();
    });


    const fileInput = document.querySelector('input[type="file"]');
    fileInput.addEventListener('change', displayImages);

    function displayImages() {
        const carouselInner = document.querySelector('.carousel-inner');
        carouselInner.innerHTML = ''; // clear any existing images

        const files = this.files;
        for (let i = 0; i < files.length; i++) {
            const file = files[i];
            const reader = new FileReader();
            reader.readAsDataURL(file);
            reader.onload = function () {
                const image = document.createElement('img');
                image.className = 'd-block w-100';
                image.src = this.result;

                const carouselItem = document.createElement('div');
                carouselItem.className = 'carousel-item';
                if (i === 0) {
                    carouselItem.classList.add('active');
                }
                carouselItem.appendChild(image);

                carouselInner.appendChild(carouselItem);
            }
        }
    }

    const inputFile = document.querySelector('#customFile');
        const descriptionFieldsContainer = document.querySelector('#description-fields');

        // Listen for changes to the file input field
        inputFile.addEventListener('change', (event) => {
            const numImages = event.target.files.length;
            // Remove any existing description fields
            descriptionFieldsContainer.innerHTML = '';
            // Create a description input field for each image
            for (let i = 0; i < numImages; i++) {
                const descriptionInput = document.createElement('input');
                descriptionInput.type = 'text';
                descriptionInput.name = 'description[]';
                descriptionInput.classList.add('form-control');
                descriptionInput.required = true;
                descriptionInput.placeholder = `Banner Description ${i + 1}`;
                descriptionFieldsContainer.appendChild(descriptionInput);
            }
        });

</script>
