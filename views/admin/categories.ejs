                    <a href="/admin/edit-category?id=<%= category[i]._id %>"><button type="button"
                      class="btn btn-outline-info btn-circle btn-lg btn-circle ml-2"><i
                        class="fa fa-edit"></i> </button></a>
              </td>
            </tr>
          <% } %>
          <%}else { %>
            <tr>
              <td colspan="5">Category not found</td>
  
            </tr>
            <% } %>

          
