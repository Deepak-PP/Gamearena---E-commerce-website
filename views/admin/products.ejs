      <div class="row tm-content-row mt-5">
        <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12 tm-block-col">
          <div class="tm-bg-primary-dark text-light tm-block tm-block-products">
            <div class="tm-product-table-container">
              <table id="example" class="table table-hover tm-table-small tm-product-table">
                <thead>
                  <tr>
                    <th scope="col">SL.No</th>
                    <th scope="col">PRODUCT NAME</th>
                    <th scope="col">IMAGE</th>
                    <th scope="col">PRICE</th>
                    <th scope="col">PROCESSOR</th>
                    <th scope="col">QUANTITY</th>
                    <th scope="col">CATEGORY</th>
                    <th scope="col">ACTIONS</th>
                  </tr>
                </thead>
                <tbody>
                  <% if(products.length>0) {
                    for(let i=0;i <products.length; i++){ %>
                  <tr>

                    <td> <%= [i+1] %></td>
                    <td class="tm-product-name"> <%= products[i].name %></td>
                    <td><img style="height: 5rem;width: 5rem;" src="/productImages/<%= products[i].image[0] %>" alt="<%= products[i].image[0] %>"> </td>
                    <td><%= products[i].price %></td>
                    <td><%= products[i].processor %></td>
                    <td><%= products[i].in_stock %></td>
                    <td><%= products[i].category.name %></td>
                    <td>
                      <form action="/admin/delete-product?id=<%= products[i]._id %>" method="POST">
                      <button onclick=" formSubmit()" type="submit"
                      class="btn btn-outline-info btn-circle btn-lg btn-circle ml-2"><i
                      class="fa fa-trash"></i> </button>
                      </form>

                      <a href="/admin/view-product/?id=<%=products[i]._id%>"><button type="button"
                        class="btn btn-outline-info btn-circle btn-lg btn-circle ml-2">VIEW </button></a>
                         
                          <a href="/admin/edit-product?id=<%= products[i]._id %>"><button type="button"
                            class="btn btn-outline-info btn-circle btn-lg btn-circle ml-2"><i
                              class="fa fa-edit"></i> </button></a>
                    </td> 
                  </tr>

                  <% } %>

                  <%}else { %>
                    <tr>
                      <td>Product not found</td>
          
                    </tr>
                    <% } %>
                  
                </tbody>
